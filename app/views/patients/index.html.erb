<h1>Список пациентов</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Имя</th>
      <th>Отчество</th>
      <th>Фамилия</th>
      <th>Описание</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @patients.each do |patient| %>
      <tr>
        <td><%= patient.first_name %></td>
        <td><%= patient.middle_name %></td>
        <td><%= patient.last_name %></td>
        <td><%= patient.description %></td>
        <td><%= link_to 'Показать', patient %></td>
        <td><%= link_to 'Редактировать', edit_patient_path(patient) %></td>
        <td><%= link_to 'Удалить', patient, method: :delete, data: { confirm: 'Вы уверены что хотите расстаться с пациентом?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Добавить пациента', new_patient_path %>
<br>
<%= form_tag import_patients_path, multipart: true do %>
  <%= file_field_tag :file %>
  <%= submit_tag "Import CSV" %>
<% end %>