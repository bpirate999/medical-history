<p id="notice"><%= notice %></p>

<p>
  <strong>Имя:</strong>
  <%= @patient.first_name %>
</p>

<p>
  <strong>Отчество:</strong>
  <%= @patient.middle_name %>
</p>

<p>
  <strong>Фамилия:</strong>
  <%= @patient.last_name %>
</p>

<p>
  <strong>Описание:</strong>
  <%= @patient.description %>
</p>

<h2>Записи</h2>
<% @patient.writings.each do |writing| %>
  <%= div_for writing do %>
  <p>
   
    <%= 'Диагноз - ' + h(writing.diagnosis) %>
    <br>
    <%= 'Лечение - ' + h(writing.treatment) %>
  </p>
  <% end %>
 <% end %>

<h2>Добавить запись</h2>
<%= form_for([@patient, Writing.new]) do |f| %>
  <p>
  	<%= f.label :Диагноз %><br>
  	<%= f.text_field :diagnosis %>
  </p>
  <p>
  	<%= f.label :Лечение %><br>
  	<%= f.text_field :treatment %>
  </p>
  <p>
  	<%= f.submit %>
  </p>
  <% end %>

<%= link_to 'Редактировать', edit_patient_path(@patient) %> |
<%= link_to 'Назад', patients_path %>
